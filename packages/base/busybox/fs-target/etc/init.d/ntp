################################################################################

# SEQ=03

case "$1" in
  start)
    (
      while : ; do
        if [ -f /etc/resolv.conf ] ; then
          break
        fi
        sleep 0.5
      done
      /sbin/ntpd -N
    ) &
    ;;
  stop)
    pkill -f ntpd &>/dev/null
    ;;
  restart)
    "$0" stop
    "$0" start
    ;;
esac

exit 0
